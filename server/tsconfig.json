{
  "compilerOptions": {
    "target": "ES2020",                // Set target to modern JavaScript
    "module": "commonjs",              // Use CommonJS module system (for Node.js)
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,              // Speed up compilation by skipping library check
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",                  // Output transpiled JS files to 'dist'
    "rootDir": "src",                  // Root TypeScript files in 'src'
    "strict": true                      // Enable strict type-checking
  },
  "include": ["src/**/*"],              // Include all files in the 'src' directory
  "exclude": ["node_modules"]           // Exclude node_modules directory
}
